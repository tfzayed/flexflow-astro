---
import { markdownify } from "@/lib/utils/textConverter";

const {
  title = "",
  description = "",
}: { title?: string; description?: string } = Astro.props;
---

<section
  class="pb-20 xl:pb-24 pt-32 xl:pt-40 bg-secondary/15 2xl:m-4 2xl:rounded-lg"
>
  <div class="container text-center">
    <div class="rounded-2xl">
      <h1
        class="mb-4 lg:col-10 mx-auto leading-tight text-5xl lg:text-6xl"
        data-aos="fade-up-sm"
        set:html={markdownify(title)}
      />
      <p
        class="lg:col-6 mx-auto font-medium"
        data-aos="fade-up-sm"
        data-aos-delay="50"
        set:html={markdownify(description)}
      />
    </div>
  </div>
</section>
